root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{lua,obj2,anm2,scn2,cam2,tra2}]
indent_style = space
indent_size = 2
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[*.yaml]
indent_style = space
indent_size = 2
